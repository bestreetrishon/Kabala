<body>
    <div class="container">
        <h2>משימות סטודיו</h2>
        <label for="worker">בחר/י שם:</label>
        <select id="worker">
            <option>עלמה</option>
            <option>נועה</option>
            <option>שירה</option>
        </select>
        <div id="taskList">
            <div class="task"><span>פתיחת הסטודיו</span><input type="checkbox"></div>
            <div class="task"><span>בדיקת רמקולים ותאורה</span><input type="checkbox"></div>
            <div class="task"><span>ניקיון אחרי שיעור</span><input type="checkbox"></div>
            <div class="task"><span>סידור קבלה וספירת מזומן</span><input type="checkbox"></div>
            <div class="task"><span>כיבוי אורות ונעילת דלתות</span><input type="checkbox"></div>
        </div>
        <button onclick="saveTasks()">שמור</button>
    </div>

    <script>
        function saveTasks() {
            let worker = document.getElementById("worker").value;
            let tasks = document.querySelectorAll(".task input");
            let completedTasks = [];
            tasks.forEach((task, index) => {
                if (task.checked) {
                    completedTasks.push(document.querySelectorAll(".task span")[index].textContent);
                }
            });
            alert(worker + " ביצע/ה: " + completedTasks.join(", "));
        }
    </script>
